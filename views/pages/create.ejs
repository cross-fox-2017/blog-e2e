<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <h3 style="color: #006666;">Create Article</h3>
      </br>
      <form action="/api/articles" method="post">
        <div class="form-group">
          <label for="title_create">Title*:</label>
          <input type="text" class="form-control" name="title_create" id="title_create" value="" placeholder="Title" required="required">
        </div>
        <div class="form-group">
          <label for="content_create">Content*:</label>
          <textarea rows="10" cols="50" type="text" class="form-control" name="content_create" id="content_create" value="" style="padding:10px; margin: 10px 0px; border-radius: 4px; border-color: grey;"></textarea>
        </div>
        <button type="submit" id="create" class="waves-effect waves-light btn teal darken-3">Create</button>
      </form>
      </br>
      <hr>
      <a href="/home">Back to Home</a>
    </div>
  </div>
<% include ../partials/footer %>
