<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <h3 style="color: #006666;">Sign Up</h3>
      </br>
      <form action="/auth/register" method="post">
        <div class="form-group">
          <label for="username_reg">Username*:</label>
          <input type="text" class="form-control" name="username_reg" id="username_reg" value="" placeholder="Username" required="required">
        </div>
        <div class="form-group">
          <label for="password_reg">Password*:</label>
          <input type="password" class="form-control" name="password_reg" id="password_reg" value="" placeholder="Your password" required="required">
        </div>
        <div class="form-group">
          <label for="email_reg">Email*:</label>
          <input type="email" class="form-control" name="email_reg" id="email_reg" value="" placeholder="Email address" required="required">
        </div>
        <label>By clicking continue, I agree to the this's blog Terms and Privacy</label>
        </br>
        </br>
        <button id="register" type="submit" class="waves-effect waves-light btn teal darken-3">Continue</button>
      </form>
      </br>
      <hr>
      <label>Already have an account?</label>
      <a href="/">Sign In</a>
    </div>
  </div>
<% include ../partials/footer %>
